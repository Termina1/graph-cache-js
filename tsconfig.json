  "compilerOptions": {
    "allowJs": false,
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}
